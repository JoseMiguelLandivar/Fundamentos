#include <iostream>
#include <vector>
#include <cmath>  

using namespace std;

double diferencia_maxima_consecutivos(const vector<double>& A) {
    if (A.size() < 2) {
        return 0.0;  
    }

    double max_diferencia = 0.0;  

    for (size_t i = 0; i < A.size() - 1; ++i) {
        double diferencia = abs(A[i + 1] - A[i]);  
        if (diferencia > max_diferencia) {
            max_diferencia = diferencia;
        }
    }

    return max_diferencia;
}

int main() {
    int n;
    cout << "Ingrese el numero de elementos en el arreglo: ";
    cin >> n;

    if (n < 2) {
        cout << "Debe haber al menos dos elementos para calcular la diferencia." << endl;
        return 1;
    }

    vector<double> A(n);

    cout << "Ingrese los " << n << " elementos del arreglo:" << endl;
    for (int i = 0; i < n; ++i) {
        cout << "Elemento " << (i + 1) << ": ";
        cin >> A[i];
    }

    double resultado = diferencia_maxima_consecutivos(A);
    cout << "La diferencia mas grande entre elementos consecutivos es: " << resultado << endl;

    return 0;
}
