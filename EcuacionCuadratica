#include <iostream>
#include <Math.h>

using namespace std;

int main()
{
    // Declaracion de variable
    float a, b, c, x1, x2, d;
    cout << "Calculo de las raices cuadraticas: ";
    cout << endl << "Coeficiente a=";
    cin >> a;
    if (a != 0) {
        cout << "b=";
        cin >> b;
        cout << "c=";
        cin >> c;
    }
       d = -b * b - 4 * a * c;
       if (d > 0) {
           x1 < -(-b + sqrt(d)) / (2 * a);
           x2 < -(-b - sqrt(d)) / (2 * a);
           cout << "Raices reales : x1 = " << x1 << " x2 = " << x2 << endl;
       }
       else
           if (d == 0)
               cout << "Raiz unica : " << -b / (2 * a);
           else
           {
               cout << "La solucion no es real";
               cout << "Las raices imaginarias son:";
               cout << "x1= " << -b / (2 * a) << "+" << sqrt(-d) / (2 * a) << "i";
               cout << "x2 = " << -b / (2 * a) << " - " << sqrt(-d) / (2 * a) << "i" << endl;
           }
 
       return 0;
}
